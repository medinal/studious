<div class="row align-middle">
  <%= render "shared/sidebar" %>
  <div class="input-group medium-6 medium-offset-2 columns">
    <span class="input-group-label">Link</span>
    <input id="link-field" class="input-group-field" type="text" value="<%= "http://localhost:3000/users/#{current_user.identifier}" %>">
    <div class="input-group-button">
      <button class="clipboard-btn" data-clipboard-target="#link-field"><i id="copy" class="fi-page-copy"></i></button>
    </div>
  </div>
</div>
