<h2 class="text-center">Profile Picture</h2>

<% if current_user.student? %>

  <%= simple_form_for @image, url: student_image_path do |f| %>

    <div class="form-inputs">
      <%= f.input :avatar, label: "Set your profile picture." %>
    </div>


    <div class="form-actions">
      <%= f.button :submit, "Set Picture" %>
    </div>

  <% end %>

<% elsif current_user.admin? %>

  <%= simple_form_for @image, url: admin_image_path do |f| %>

    <div class="form-inputs">
      <%= f.input :avatar, label: "Set your profile picture." %>
    </div>


    <div class="form-actions">
      <%= f.button :submit, "Set Picture" %>
    </div>

  <% end %>

<% elsif current_user.processor? %>

  <%= simple_form_for @image, url: processor_image_path do |f| %>

    <div class="form-inputs">
      <%= f.input :avatar, label: "Set your profile picture." %>
    </div>


    <div class="form-actions">
      <%= f.button :submit, "Set Picture" %>
    </div>

  <% end %>

<% end %>
