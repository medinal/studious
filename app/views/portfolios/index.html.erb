<div id="main" class="small-12 medium-10 columns">
  <h1>Your Portfolios</h1>


  <table>
    <thead>
      <tr>
        <td>Name</td>
        <td>Created On</td>
        <td>Last Updated</td>
        <td>Portfolio Link</td>
        <td>View</td>
        <td>Edit</td>
        <td>Delete</td>
      </tr>
    </thead>

    <tbody>
      <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.title %></td>
        <td><%= portfolio.created_at.strftime('%m/%d/%y') %></td>
        <td><%= portfolio.updated_at.strftime('%m/%d/%y') %></td>
        <td><%= link_to "Share", submit_path(portfolio), method: "get", class: "fi-link" %></td>
        <td><%= link_to "Details", student_portfolio_path(portfolio), method: "get", class: "fi-eye" %></td>
        <td><%= link_to "Edit", edit_student_portfolio_path(portfolio), method: "get", class: "fi-pencil" %></td>
        <td><%= link_to "Delete", student_portfolio_path(portfolio), method: "delete", class: "fi-trash" %></td>
      </tr>
      <% end %>
      <tr>
        <td colspan="7" class="text-center"><%= link_to 'New Portfolio', new_student_portfolio_path, method: "get", class: "button expanded"%></td>
      </tr>
    </tbody>
  </table>
</div>
