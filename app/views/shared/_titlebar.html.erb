<div class="top-bar" id="main-menu">
  <div class="top-bar-left">
    <ul class="dropdown menu" data-dropdown-menu>
      <li><h1><span class="top-bar-title">Studious | <small>portfolios reimagined</small></span></h1></li>
    </ul>
  </div>
  <div class="top-bar-right">
    <% if !current_user %>
      <ul class="menu">
        <li><%= link_to "Register", new_user_registration_path, method: "get" %></li>
        <li><%= link_to "Log In", new_user_session_path, method: "get" %></li>
      </ul>
    <% else %>
      <ul class="menu" data-responsive-menu="medium-dropdown">
        <li class="has-submenu">
          <a><% if !current_user.image  %>
            <img id="icon" src="/default-profile-picture.png">
          <% else %>
            <%= cl_image_tag(current_user.image.avatar, :gravity=>"face", :width=>50, :height=>50, :crop=>"thumb") %>
          <% end %></a>
          <ul class="submenu menu vertical" data-submenu>
            <li><%= link_to "My Dashboard", student_path, method: "get" %></li>
            <% if current_user.profile %>
              <li class="hide-for-medium"><%= link_to "Profile", student_profile_path, method: "get" %></li>
            <% else %>
              <li class="hide-for-medium"><%= link_to "Profile", new_student_profile_path, method: "get" %></li>
            <% end %>
            <li class="hide-for-medium"><%= link_to "Projects", student_projects_path, method: "get" %></li>
            <li class="hide-for-medium"><%= link_to "Portfolios", student_portfolios_path, method: "get" %></li>
            <li><%= link_to "Account Settings", edit_user_registration_path, method: "get" %></li>
            <hr>
            <li><%= link_to "Log Out", destroy_user_session_path, method: "delete" %></li>
          </ul>
        </li>
      </ul>
    <% end %>
  </div>
</div>
