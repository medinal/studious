<div class="top-bar" id="main-menu">
  <div class="top-bar-left">
    <ul class="dropdown menu" data-dropdown-menu>
      <li><h1><span class="top-bar-title"><a class="title-link" href="/">Studious | <small>portfolios reimagined</a></small></span></h1></li>
    </ul>
  </div>
  <div class="top-bar-right">
    <% if !current_user %>
      <ul class="menu">
        <li><%= link_to "Register", new_user_registration_path, method: "get" %></li>
        <li><%= link_to "Log In", new_user_session_path, method: "get" %></li>
      </ul>
    <% else %>
      <ul class="menu" data-responsive-menu="medium-dropdown">
        <li class="has-submenu">
          <a><% if !current_user.image  %>
            <img id="icon" src="/default-profile-picture.png">
          <% else %>
            <%= cl_image_tag(current_user.image.avatar, :gravity=>"face", :width=>50, :height=>50, :crop=>"thumb") %>
          <% end %></a>
          <%= render "shared/dropdown" %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
